extends layout

block content
  h3.muted Stats

  table.table.table-striped(style="table-layout: fixed; width: 100%;")
    thead
      tr
        th.text-right Day
        th.text-right Home
        th.text-right Shorten
        th.text-right Expand
        th.text-right View
        th.text-right Not Found
        th.text-right ✗ Blank URL
        th.text-right ✗ Invalid URL
        th.text-right ✗ Name
        th.text-right ✗ Email
        th.text-right ✗ Location
        th.text-right ✗ TS Invalid
        th.text-right ✗ TS Old
        th.text-right ✗ Signature
    tbody
      for ts in Object.keys(stats).sort()
        tr
          td.text-right= (new Date(ts * 1000)).toISOString().slice(0, 10)
          td.text-right= stats[ts].home || 0
          td.text-right= stats[ts].shorten || 0
          td.text-right= stats[ts].expand || 0
          td.text-right= stats[ts].view || 0
          td.text-right= stats[ts].notfound || 0
          td.text-right= stats[ts].blank || 0
          td.text-right= stats[ts].invalid || 0
          td.text-right= stats[ts].name || 0
          td.text-right= stats[ts].email || 0
          td.text-right= stats[ts].location || 0
          td.text-right= stats[ts].tsinvalid || 0
          td.text-right= stats[ts].tsold || 0
          td.text-right= stats[ts].sig || 0

  p (Ends)
